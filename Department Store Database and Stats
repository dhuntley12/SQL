--Retrieve items from the Store table, ordered by price from the highest to lowest
SELECT * From Store ORDER BY Price desc;

--Retrieve the average price and total quantity of items from the Store table
SELECT AVG(Price) FROM Store;
SELECT SUM(QUANTITY) FROM Store;
